# Environment Variables Template
# Copy this file to .env and fill in your values

# Model Configuration
MODEL_BASE_PATH=BAAI/bge-small-en-v1.5
MODEL_MAX_SEQ_LENGTH=128
MODEL_USE_FP16=true

# Training Configuration
TRAIN_EPOCHS=1
TRAIN_BATCH_SIZE=32
TRAIN_LEARNING_RATE=2.0e-5
TRAIN_MARGIN=0.25

# Data Paths
DATA_PATH=/path/to/data/test.csv
OUTPUT_DIR=./models/trained
SUBMISSIONS_DIR=./data/submissions

# Logging
LOG_LEVEL=INFO
LOG_DIR=./logs

# API Configuration (if using FastAPI)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Optional: MLflow Tracking
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=rule-violation-detection

# Optional: Weights & Biases
WANDB_PROJECT=rule-violation-detection
WANDB_ENTITY=your-username
WANDB_API_KEY=your-api-key

# Optional: Hugging Face Hub
HF_TOKEN=your-huggingface-token
HF_REPO_ID=your-username/model-name

# System
CUDA_VISIBLE_DEVICES=0
OMP_NUM_THREADS=4
TOKENIZERS_PARALLELISM=false